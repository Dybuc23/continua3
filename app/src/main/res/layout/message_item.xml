<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_color="@color/icon_color"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/message_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:layout_marginVertical="10dp"
        android:textColor="?colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_image"
        app:layout_constraintTop_toTopOf="@+id/message_image"
        />
    <TextView
        android:id="@+id/message_description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Carbonite web goalkeeper gloves are ergonomically designed to give easy fit"
        android:textColor="?colorOnPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_image"
        app:layout_constraintTop_toBottomOf="@+id/message_name"
        />
    <TextView
        android:id="@+id/message_time"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="4h"
        android:textColor="?colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_image"
        app:layout_constraintTop_toBottomOf="@+id/message_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>